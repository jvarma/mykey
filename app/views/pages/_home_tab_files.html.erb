<div class="tab-pane" id="4">

	<div class="container">
		<% @assets.each do |asset| %>
			<div class="row">
				<div class="span2">
					<%= image_tag("asset_type.jpg") %>
				</div>
				<div class="span10">
					<div class="row">
						<h2 class="pull-left">
						<%= link_to pretty_file_name(asset.file_name), download_url(asset) %>
						</h2>
					</div>
					<div class="row">
						<%= number_to_human_size(asset.file_size, precision: 2) %>
					</div>
					<div class="row">
						<%= link_to "delete", asset_path(asset), method: :delete%>
					</div>	
				</div>
			</div>
		<% end %>
	</div>

	<div class="container center">
		<%= link_to "upload", new_asset_path, class: "btn btn-small btn-primary" %>
	</div>

	
</div>